#include <stdio.h>
int main() {
    int a,b,k;
    printf("Enter the number of rows: ");
    scanf("%d",&b);
     for(int i=0;i<=b-1;i++)
     {    a=b,k=0;
          for(int j=0;j<=b+b-1;j++)
         {
             if(k>=(i+1))
             break;
             else if((i+j)==a)
            {
             printf("*");
             a=a+2;
             k++;
            }
            else
            printf(" ");
         }
         printf("\n");
     }
    return 0;
}
